<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="post">

<insert id="insertPost" parameterType="PostVo">
	<![CDATA[
	
	insert into post
	values
		(seq_post_no.nextval,
       #{cateNo},
       #{postTitle},
       #{postContent},
       sysdate)			
		       
	]]>

</insert>

<select id="selectPostList" parameterType="int" resultType="PostVo">

	<![CDATA[
		select postNo,
		       cateNo,
		       postTitle,
		       postContent,
		       regDate
		from post
		where cateNo= #{cateNo}
		order by postno desc
	]]>

</select>

<select id="selectrecentOne" resultType="PostVo">
<![CDATA[
select p.cateno,p.postcontent,p.postno,p.posttitle,p.regdate
from post p ,(select  max(regdate) regdate
              from post
              
              
              
              ) b
where p.regdate = b.regdate
]]>

</select>


</mapper>